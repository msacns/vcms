extends ../default

block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Administração
          li.breadcrumb-item Configurações
          li.breadcrumb-item Fornecedores
          li.breadcrumb-item.active Detalhes
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-edit
                      |  Fornecedor - Detalhes
                      - var docid       = suppl.id;
                      - var codfor      = suppl.supplier;
                      - var descfor     = suppl.description;
                      - var codpais     = suppl.country;
                      - var desccontato = suppl.contact;
                      - var ativo       = suppl.active;
                      - var dtcriacao   = suppl.createdAt;
                    .card-body   
                      != messages()  
                      form.form-horizontal(action='/suppliers/delete/' + docid, method='post')                         
                        .form-group
                          label.form-control-label(for='fullname') Código
                          .controls
                            .input-group
                              input#supplier.form-control(name='supplier',size='16', type='text',  value=codfor, readonly=true)
                        .form-group
                          label.form-control-label(for='description') Fornecedor
                          .controls
                            .input-group
                              input#description.form-control(name='description',size='100', type='text',  value=descfor, readonly=true)                                                           
                        .form-group
                          label.form-control-label(for='country') País
                          .controls
                            .input-group
                              input#country.form-control(name='country',size='16', type='text',  value=codpais, readonly=true) 
                        .form-group
                          label.form-control-label(for='country') Contato
                          .controls
                            .input-group
                              input#contact.form-control(name='contact',size='16', type='text',  value=desccontato, readonly=true) 
                        
                        .form-group
                          label.col-md-3.form-control-label(for='activedYN') Ativo?
                          .controls
                            .col-md-9
                              select#active.form-control-sm(name='active', disabled=true)
                                option(value='true', selected=ativo == true) Sim
                                option(value='false', selected=ativo == false) Não
                        .form-group
                          label.form-control-label(for='createdAt') Criado em
                          .controls
                            .input-group
                              input#createdAt.form-control(size='16', type='text', readonly=true, value=formatDate(dtcriacao))                                                                                                              
                        .form-actions                          
                          a(href='/supplier/edit/'+docid) 
                            button.btn.btn-sm.btn-success(type='button')
                              i.fa.fa-edit
                              |  Editar   
                            span    
                          button.btn.btn-sm.btn-primary(type='submit')
                            i.fa.fa-delicious
                            |  Deletar   
                          span         
                          a(href='/suppliers')                
                            button.btn.btn-sm.btn-info(type='button')
                              i.fa.fa-backward
                              |  Voltar a lista                               