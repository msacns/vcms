extends ../default

block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Administração
          li.breadcrumb-item Configurações
          li.breadcrumb-item Clientes
          li.breadcrumb-item.active Detalhes
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-edit
                      |  Cliente - Detalhes
                      - var docid       = clients.id;
                      - var codcli      = clients.customer;
                      - var descli      = clients.description;
                      - var codpais     = clients.country;
                      - var codestado     = clients.state;
                      - var codcidade     = clients.city;
                      - var desccontato = clients.contact;
                      - var ativo       = clients.active;
                      - var dtcriacao   = clients.createdAt;
                    .card-body   
                      != messages()  
                      form.form-horizontal(action='/customers/delete/' + docid, method='post')                         
                        .form-group
                          label.form-control-label(for='fullname') Código
                          .controls
                            .input-group
                              input#customer.form-control(name='customer',size='16', type='text',  value=codcli, readonly=true)
                        .form-group
                          label.form-control-label(for='description') Cliente
                          .controls
                            .input-group
                              input#description.form-control(name='description',size='100', type='text',  value=descli, readonly=true)                                                           
                        .form-group
                          label.form-control-label(for='lblcountry') País
                          .controls
                            .input-group
                              input#country.form-control(name='country',size='16', type='text',  value=codpais, readonly=true) 
                        .form-group
                          label.form-control-label(for='lblstate') Estado
                          .controls
                            .input-group
                              input#state.form-control(name='state',size='16', type='text',  value=codestado, readonly=true) 
                        .form-group
                          label.form-control-label(for='lblcity') Cidade
                          .controls
                            .input-group
                              input#city.form-control(name='city',size='16', type='text',  value=codcidade, readonly=true)             
                        .form-group
                          label.form-control-label(for='country') Contato
                          .controls
                            .input-group
                              input#contact.form-control(name='contact',size='16', type='text',  value=desccontato, readonly=true) 
                        
                        .form-group
                          label.col-md-3.form-control-label(for='activedYN') Ativo?
                          .controls
                            .col-md-9
                              select#active.form-control-sm(name='active', disabled=true)
                                option(value='true', selected=ativo == true) Sim
                                option(value='false', selected=ativo == false) Não
                        .form-group
                          label.form-control-label(for='createdAt') Criado em
                          .controls
                            .input-group
                              input#createdAt.form-control(size='16', type='text', readonly=true, value=formatDate(dtcriacao))                                                                                                              
                        .form-actions                          
                          a(href='/customers/edit/'+docid) 
                            button.btn.btn-sm.btn-success(type='button')
                              i.fa.fa-edit
                              |  Editar   
                            span    
                          button.btn.btn-sm.btn-primary(type='submit')
                            i.fa.fa-delicious
                            |  Deletar   
                          span         
                          a(href='/customers')                
                            button.btn.btn-sm.btn-info(type='button')
                              i.fa.fa-backward
                              |  Voltar a lista                               